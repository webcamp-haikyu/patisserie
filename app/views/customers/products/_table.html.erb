<div class="col-3">
	<%= link_to product_path(product.id) do %>
		<%= attachment_image_tag product, :image, :fill, 200, 200, format: 'jpeg', class:"img-fluid"  %>
		<h5><%= product.name %></h5>
		<% if product.is_active == false %>
			<p>￥<%= product.price %></p><p class="text-danger">売り切れ</p>
		<% else %>
			<p>￥<%= product.price %></p>
		<% end %>
	<% end %>
</div>
