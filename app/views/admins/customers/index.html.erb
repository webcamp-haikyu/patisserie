<div class='container'>
  <div class='row pt-5'>
    <h3>会員一覧</h3>
  </div>
  <div class='row pt-5'>
  	<table class="col-9 text-center table table-hover table-inverse">
  	  <thead>
  	  	<tr>
  	  	  <th class="text-left">会員ID</th>
  	  	  <th class="text-left">氏名</th>
  	  	  <th>メールアドレス</th>
  	  	  <th>ステータス</th>
  	  	</tr>
  	  </thead>
  	  <tbody>
  	  	<% @customers.each do |customer| %>
  	  	  <tr>
  	  	  	<td class="text-left">
  	  	  	  <%= customer.id %>
  	  	  	</td>
  	  	  	<td class="text-left">
  	  	  	  <%= link_to admins_customer_path(customer) do %>
                <%= customer.full_name %>
              <% end %>
  	  	  	</td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.is_active == true %>
                <p>有効</p>
              <% else %>
                <p>無効</p>
              <% end %>
            </td>
  	  	  </tr>
  	  	<% end %>
  	  </tbody>
  	</table>
  </div>
</div>