<!DOCTYPE html>
<html>
  <head>
    <title>Patisserie</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script src="https://kit.fontawesome.com/188b0a3462.js" crossorigin="anonymous"></script>
    <%= stylesheet_link_tag    'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_include_tag 'application', 'data-turbolinks-track': 'reload' %>
  </head>
  <nav class="navbar navbar-expand-lg navbar-dark bg-dark">
      <div class="container">
        <ul class='brand-color'>
          <h4 class="navbar-brand">
            <%= link_to "NAGANO CAKE",root_path %>
          </h4>
        </ul>
        <div class ="search-box">
          <% if admin_signed_in? %>
            <%= form_tag(admins_search_path, method: :get) do %>
              <%= text_field_tag (:word) %>
              <%= submit_tag "検索" %>
            <% end %>
          <% else %>
            <%= form_tag(search_path, method: :get) do %>
              <%= text_field_tag (:word) %>
              <%= submit_tag "検索" %>
            <% end %>
          <% end %>
        </div>
        <% if customer_signed_in? %>
          <p class="navbar-text navbar-right">ようこそ<%= current_customer.last_name+current_customer.first_name %>さん</p>
        <% end %>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNav" aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>

        <div class="collapse navbar-collapse justify-content-end" id="navbarNav" >
          <div class="nav-icon">
            <ul class="navbar-nav ">
              <% if customer_signed_in? %>
              <!-- カスタマーログイン後 -->
                <li class="nav-item">
                  <%= link_to "マイページ", customers_my_page_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", products_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "カート", product_cart_products_path(:roduct_id), class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_customer_session_path, class: "nav-link", :method=>:delete %>
                </li>
              <% elsif admin_signed_in? %>
              <!-- 管理者のログイン後 -->
                <li class="nav-item">
                  <%= link_to "商品一覧", admins_products_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "会員一覧", admins_customers_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "注文履歴一覧", admins_orders_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ジャンル一覧", admins_categories_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログアウト", destroy_admin_session_path, class: "nav-link", :method=>:delete %>
                </li>
              <% else %>
              <!-- ログイン前 -->
                <li class="nav-item">
                  <%= link_to "About", about_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "商品一覧", products_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "新規登録", new_customer_registration_path, class: "nav-link" %>
                </li>
                <li class="nav-item">
                  <%= link_to "ログイン", new_customer_session_path, class: "nav-link" %>
                </li>
              <% end %>
            </ul>
          </div>
        </div>
      </div>
    </nav>
  <body>
    <%= yield %>
  </body>
</html>
