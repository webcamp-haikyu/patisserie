<div class="container">
	<div class="row mt-5">
		<h2>注文履歴詳細</h2>
	</div>
	<div class="row mt-3">
		<div class="col-md-7">
			<h4>注文情報</h4><br>
			<table class="table table-bordered">
				<tr>
					<th>注文日</th>
					<td><%=@order.created_at.strftime('%Y/%m/%d')%></td>
				</tr>
				<tr>
					<th>配送先</th>
					<td><%=@order.post_code %><br>
						<%=@order.address %><br>
						<%= @order.name %></td>
				</tr>
				<tr>
					<th>支払い方法</th>
					<td><%=@order.payment_method %></td>
				</tr>
				<tr>
					<th>ステータス</th>
					<td><%=@order.order_status%></td>
				</tr>
			</table>
		</div>
		<div class="col-md-5">
			<h4>請求情報</h4><br>
			<table class="table table-bordered">
				<tr>
					<th>商品合計</th>
					<td><%= @total %></td>
				</tr>
				<tr>
					<th>配送料</th>
					<td><%=@order.delivery_fee %></td>
				</tr>
				<tr>
					<th>ご請求額</th>
					<td><%= @order.total_payment %></td>
				</tr>
			</table>
		</div>
	</div>
	<div class="row mt-3">
			<h4>注文内容</h4><br>
			<table class="table table-bordered">
				<thead>
					<tr>
						<th>商品</th>
						<th>単価（税込）</th>
						<th>個数</th>
						<th>小計</th>
					</tr>
				</thead>
				<tbody>
					<% @order_items.each do |order_item| %>
						<tr>
							<td><%=order_item.product.name%></td>
							<td><%= order_item.product.price %></td>
							<td><%= order_item.quantity %></td>
							<td><%= order_item.order_price %></td>
						</tr>
					<% end %>
				</tbody>
			</table>
	</div>
</div>