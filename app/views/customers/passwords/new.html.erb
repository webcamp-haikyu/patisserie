<div class="container">
	<div class="row">
		<div class ="col-md-6 offset-md-3 mt-5">
			<h5>ご登録されているメールアドレスをご入力ください</h5>
		</div>
	</div>

		<%= form_for(resource, as: resource_name, url: password_path(resource_name), html: { method: :post }) do |f| %>
		  <%= render "customers/shared/error_messages", resource: resource %>

		  <div class="row">
		  	<div class="col-md-4 offset-md-4 my-3">
		    	<%= f.email_field :email,class:"form-control", autofocus: true, autocomplete: "email" %>
		    </div>
		  </div>

		  <div class="row">
		  	<div class="col-md-4 offset-md-4">
		    	<%= f.submit "パスワードを再設定する",class: "btn btn-outline-secondary btn-block" %>
		  	</div>
		  </div>
		<% end %>
</div>