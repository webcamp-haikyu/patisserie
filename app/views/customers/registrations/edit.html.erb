<div class ="container">
  <div class ="row mt-5">
    <div class ="col-md-10 offset-md-1">
      <h2>登録編集画面</h2>
    </div>
  </div>

  <%= form_for(@customer) do |f| %>
    <%= render "customers/shared/error_messages", resource: resource %>

    <!-- 編集フォーム挿入 -->
    <%= render "form", f: f %>

    <!-- 保存/退会ボタン -->
    <div class="row mb-5">
      <div class="col-md-4 offset-md-2">
        <%= f.submit "編集内容を保存する",class: "btn btn-success btn-block" %>
      </div>

      <!-- 退会ページ作成後ルート直す -->
      <div class="col-md-2 offset-2">
        <%= link_to "退会する", check_customers_path, class: "btn btn-danger btn-block" %>
      </div>
    </div>

  <% end %>
</div>
