<div class='container'>
  <%= render 'admins/searches/box' %>
  <div class='row ml-1 mt-5'>
    <h2>会員一覧</h2>
  </div>
  <div class='row mt-3'>
  	<table class="col-9 text-center table table-hover table-inverse">
  	  <thead>
  	  	<tr>
  	  	  <th class="text-left">会員ID</th>
  	  	  <th class="text-left">氏名</th>
  	  	  <th>メールアドレス</th>
  	  	  <th>会員ステータス</th>
  	  	</tr>
  	  </thead>
  	  <tbody>
  	  	<% @customers.each do |customer| %>
  	  	  <tr>
  	  	  	<td class="text-left">
  	  	  	  <%= customer.id %>
  	  	  	</td>
  	  	  	<td class="text-left">
  	  	  	  <%= link_to admins_customer_path(customer) do %>
                <%= customer.full_name %>
              <% end %>
  	  	  	</td>
            <td>
              <%= customer.email %>
            </td>
            <td>
              <% if customer.deleted_at == nil %>
                <p>有効</p>
              <% else %>
                <p>退会済み</p>
              <% end %>
            </td>
  	  	  </tr>
  	  	<% end %>
  	  </tbody>
  	</table>
  </div>
</div>